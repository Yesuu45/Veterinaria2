<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="co.edu.uniquindio.poo.veterinaria.viewController.ClienteViewController">

    <children>
        <Pane layoutX="14.0" layoutY="5.0" prefHeight="807.0" prefWidth="998.0"
              style="-fx-background-color: #E6F3FF;">
            <children>
                <!-- Botón Agregar -->
                <Button fx:id="btbAgregarCliente" layoutX="448.0" layoutY="254.0" mnemonicParsing="false"
                        onAction="#crearPropietario" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"
                        text="Agregar">
                    <font>
                        <Font name="System Bold" size="14.0"/>
                    </font>
                </Button>

                <!-- Campos Propietario -->
                <Text layoutX="304.0" layoutY="66.0" text="Propietario">
                    <font>
                        <Font name="System Bold" size="18.0"/>
                    </font>
                </Text>
                <TextField fx:id="txtNombre" layoutX="261.0" layoutY="83.0" promptText="Nombre"/>
                <TextField fx:id="txtCedula" layoutX="261.0" layoutY="116.0" promptText="Cedula"/>
                <TextField fx:id="txtDireccion" layoutX="261.0" layoutY="149.0" promptText="Direccion"/>
                <TextField fx:id="txtTelefono" layoutX="261.0" layoutY="183.0" promptText="Telefono"/>
                <TextField fx:id="txtGmail" layoutX="261.0" layoutY="215.0" promptText="Gmail"/>

                <!-- Campos Mascota -->
                <Text layoutX="577.0" layoutY="66.0" text="Mascota">
                    <font>
                        <Font name="System Bold" size="18.0"/>
                    </font>
                </Text>
                <TextField fx:id="txtNombreMascota" layoutX="534.0" layoutY="83.0" promptText="Nombre"/>
                <ComboBox fx:id="selectedBoxEspecie" layoutX="533.0" layoutY="117.0" prefWidth="150.0" promptText="Especie"/>
                <TextField fx:id="txtEdad" layoutX="534.0" layoutY="149.0" promptText="Edad"/>
                <TextField fx:id="txtIdentificacion" layoutX="534.0" layoutY="183.0" promptText="Identificacion"/>

                <!-- Tabla de Clientes y Mascotas -->
                <TableView fx:id="tblListCliente" layoutX="52.0" layoutY="296.0" prefHeight="434.0" prefWidth="909.0">
                    <columns>
                        <TableColumn fx:id="ColNombrePropietario" prefWidth="167.0" text="Nombre Propietario"/>
                        <TableColumn fx:id="ColCedula" prefWidth="88.0" text="Cedula"/>
                        <TableColumn fx:id="ColDireccion" prefWidth="94.0" text="Direccion"/>
                        <TableColumn fx:id="ColTelefono" prefWidth="89.0" text="Telefono"/>
                        <TableColumn fx:id="ColGmail" prefWidth="91.0" text="Gmail"/>
                        <TableColumn fx:id="ColNombreMascota" prefWidth="116.0" text="Nombre Mascota"/>
                        <TableColumn fx:id="ColEspecie" prefWidth="73.0" text="Especie"/>
                        <TableColumn fx:id="ColEdad" prefWidth="72.0" text="Edad"/>
                        <TableColumn fx:id="ColIdentificacion" prefWidth="118.0" text="Identificacion"/>
                    </columns>
                </TableView>

                <!-- Título -->
                <Text fill="#1e56a3" layoutX="349.0" layoutY="31.0" text="REGISTRO VETERINARIA">
                    <font>
                        <Font name="System Bold" size="24.0"/>
                    </font>
                </Text>
            </children>
        </Pane>
    </children>
</AnchorPane>
