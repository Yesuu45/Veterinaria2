<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="500.0" prefWidth="800.0"
            xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="co.edu.uniquindio.poo.veterinaria.viewController.ClienteViewController">

    <children>
        <ScrollPane fitToWidth="true" fitToHeight="true"
                    AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0"
                    AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="0">
            <content>
                <VBox spacing="10" fillWidth="true">
                    <padding>
                        <Insets top="10" right="10" bottom="10" left="10"/>
                    </padding>

                    <Label text="Clientes"
                           style="-fx-font-size:18px; -fx-font-weight:bold;"/>

                    <HBox spacing="12">
                        <!-- Form Propietario -->
                        <VBox spacing="8" prefWidth="280"
                              style="-fx-padding:10; -fx-background-color:#f8f9fa; -fx-background-radius:10;">
                            <Label text="Propietario" style="-fx-font-size:14px; -fx-font-weight:bold;"/>
                            <TextField fx:id="txtNombre"     promptText="Nombre"/>
                            <TextField fx:id="txtId"         promptText="Documento"/>
                            <TextField fx:id="txtDireccion"  promptText="Dirección"/>
                            <TextField fx:id="txtTelefono"   promptText="Teléfono"/>
                            <TextField fx:id="txtGmail"      promptText="Correo"/>

                            <HBox spacing="6">
                                <Button text="Guardar"   onAction="#onGuardar"
                                        style="-fx-background-color:#28a745; -fx-text-fill:white; -fx-font-weight:bold;"/>
                                <Button text="Actualizar" onAction="#onActualizar"
                                        style="-fx-background-color:#2196F3; -fx-text-fill:white;"/>
                            </HBox>
                            <HBox spacing="6">
                                <Button text="Eliminar"  onAction="#onEliminar"
                                        style="-fx-background-color:#f44336; -fx-text-fill:white;"/>
                                <Button text="Limpiar"   onAction="#onLimpiar"
                                        style="-fx-background-color:#ffc107;"/>
                            </HBox>

                            <!-- Form Mascota -->
                            <Separator/>
                            <Label text="Mascota del propietario seleccionado" style="-fx-font-weight:bold;"/>
                            <TextField fx:id="txtMascotaNombre" promptText="Nombre de la mascota"/>
                            <ComboBox fx:id="cmbMascotaEspecie" promptText="Especie"/>
                            <TextField fx:id="txtMascotaRaza"   promptText="Raza"/>
                            <TextField fx:id="txtMascotaEdad"   promptText="Edad (número)"/>
                            <TextField fx:id="txtMascotaIdVet"  promptText="ID veterinaria (único)"/>

                            <HBox spacing="6">
                                <Button text="Agregar Mascota" onAction="#onAgregarMascota"
                                        style="-fx-background-color:#6f42c1; -fx-text-fill:white; -fx-font-weight:bold;"/>
                                <Button text="Actualizar Mascota" onAction="#onActualizarMascota"
                                        style="-fx-background-color:#17a2b8; -fx-text-fill:white;"/>
                            </HBox>
                            <Button text="Eliminar Mascota" onAction="#onEliminarMascota"
                                    style="-fx-background-color:#dc3545; -fx-text-fill:white;"/>
                        </VBox>

                        <!-- Tablas -->
                        <VBox spacing="8" VBox.vgrow="ALWAYS">
                            <Label text="Propietarios" style="-fx-font-weight:bold;"/>

                            <TableView fx:id="tblPropietarios" prefHeight="190" maxHeight="200">
                                <columns>
                                    <TableColumn fx:id="colNombre"    text="Nombre"     prefWidth="150"/>
                                    <TableColumn fx:id="colId"        text="Documento"  prefWidth="110"/>
                                    <TableColumn fx:id="colTelefono"  text="Teléfono"   prefWidth="100"/>
                                    <TableColumn fx:id="colDireccion" text="Dirección"  prefWidth="160"/>
                                    <TableColumn fx:id="colGmail"     text="Correo"     prefWidth="160"/>
                                </columns>
                            </TableView>

                            <Label text="Mascotas del propietario (selecciona una para editar/eliminar)"
                                   style="-fx-font-weight:bold;"/>

                            <TableView fx:id="tblMascotas" prefHeight="160" maxHeight="180" VBox.vgrow="NEVER">
                                <columns>
                                    <TableColumn fx:id="colMascotaNombre" text="Nombre"   prefWidth="140"/>
                                    <TableColumn fx:id="colMascotaEspecie" text="Especie"  prefWidth="90"/>
                                    <TableColumn fx:id="colMascotaRaza"    text="Raza"     prefWidth="120"/>
                                    <TableColumn fx:id="colMascotaEdad"    text="Edad"     prefWidth="70"/>
                                    <TableColumn fx:id="colMascotaIdVet"   text="ID Vet"   prefWidth="120"/>
                                </columns>
                            </TableView>
                        </VBox>
                    </HBox>
                </VBox>
            </content>
        </ScrollPane>
    </children>
</AnchorPane>
