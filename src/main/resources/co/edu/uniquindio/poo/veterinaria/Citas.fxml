<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="600.0" prefWidth="1191.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.poo.veterinaria.viewController.CitaViewController">

    <children>
        <VBox spacing="20" AnchorPane.bottomAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.topAnchor="10">
            <children>
                <!-- Título -->
                <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Gestión de Citas" />

                <HBox prefHeight="506.0" prefWidth="1147.0" spacing="20">
                    <children>
                        <!-- Lado izquierdo: formulario -->
                        <VBox prefWidth="300" spacing="15" style="-fx-padding: 15; -fx-background-color: #f8f9fa; -fx-background-radius: 10;">
                            <children>
                                <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Nueva Cita" />

                                <!-- Campo de identificación -->
                                <TextField fx:id="txtIdCita" prefWidth="200" promptText="ID de la cita" />

                                <!-- Selecciones -->
                                <ComboBox fx:id="ComPropietario" prefWidth="200" promptText="Propietario" />
                                <ComboBox fx:id="ComMascota" prefWidth="200" promptText="Mascota" /> <!-- ✅ Nuevo -->
                                <ComboBox fx:id="ComVeterinario" prefWidth="200" promptText="Veterinario" />
                                <ComboBox fx:id="ComPersonalApoyo" prefWidth="200" promptText="Personal de apoyo" />

                                <!-- Fecha y observaciones -->
                                <DatePicker fx:id="LocalDateFecha" promptText="Fecha" />
                                <TextArea fx:id="txtObservacione" prefHeight="100" prefWidth="200" promptText="Observaciones" />

                                <!-- Botones -->
                                <HBox spacing="10">
                                    <children>
                                        <Button fx:id="buttonAgregar" onAction="#AgregarCita" style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-weight: bold;" text="Agregar" />
                                        <Button onAction="#limpiarCampos" style="-fx-background-color: #ffc107; -fx-text-fill: black;" text="Limpiar" />
                                    </children>
                                </HBox>
                            </children>
                        </VBox>

                        <!-- Lado derecho: tabla -->
                        <VBox prefHeight="235.0" prefWidth="800.0" spacing="10">
                            <children>
                                <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Lista de Citas" />
                                <TableView fx:id="tblCitas" prefHeight="400" prefWidth="797.0">
                                    <columns>
                                        <TableColumn fx:id="ColdIdentificacion" prefWidth="100.0" text="ID" />
                                        <TableColumn fx:id="ColdPropietarios" prefWidth="120.0" text="Propietario" />
                                        <TableColumn fx:id="ColdMascota" prefWidth="120.0" text="Mascota" /> <!-- ✅ Nueva columna -->
                                        <TableColumn fx:id="ColdVeterinario" prefWidth="120.0" text="Veterinario" />
                                        <TableColumn fx:id="ColdPersonalApoyo" prefWidth="120.0" text="Personal Apoyo" />
                                        <TableColumn fx:id="ColdFecha" prefWidth="120.0" text="Fecha" />
                                        <TableColumn fx:id="ColdObservaciones" prefWidth="163.0" text="Observaciones" />
                                    </columns>
                                </TableView>
                            </children>
                        </VBox>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
