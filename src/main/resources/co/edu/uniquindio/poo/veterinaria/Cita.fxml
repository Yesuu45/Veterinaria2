<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="600.0" prefWidth="1191.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.poo.veterinaria.viewController.CitaViewController">

    <children>
        <VBox spacing="20" AnchorPane.bottomAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.topAnchor="10">
            <children>
                <!-- Título -->
                <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Gestión de Citas" />

                <HBox spacing="20">
                    <children>

                        <!-- Lado izquierdo: formulario -->
                        <VBox prefWidth="320" spacing="12" style="-fx-padding: 15; -fx-background-color: #f8f9fa; -fx-background-radius: 10;">
                            <children>
                                <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Nueva Cita" />

                                <!-- ID -->
                                <TextField fx:id="txtIdCita" prefWidth="220" promptText="ID de la cita " />

                                <!-- Propietario / Mascota dependiente -->
                                <ComboBox fx:id="ComPropietario" prefWidth="220" promptText="Propietario" />
                                <ComboBox fx:id="ComMascota" prefWidth="220" promptText="Mascota" />

                                <!-- Veterinario / Personal apoyo -->
                                <ComboBox fx:id="ComVeterinario" prefWidth="220" promptText="Veterinario" />
                                <ComboBox fx:id="ComPersonalApoyo" prefWidth="220" promptText="Personal de apoyo (opcional)" />

                                <!-- Fecha / Hora / Observaciones -->
                                <DatePicker fx:id="LocalDateFecha" promptText="Fecha" />
                                <TextField fx:id="txtHora" promptText="Hora (HH:mm)" />
                                <TextArea fx:id="txtObservacione" prefHeight="100" prefWidth="220" promptText="Observaciones" />

                                <!-- Botones -->
                                <HBox spacing="10">
                                    <children>
                                        <Button fx:id="buttonAgregar" onAction="#AgregarCita" style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-weight: bold;" text="Agregar" />
                                        <Button onAction="#limpiarCampos" style="-fx-background-color: #ffc107; -fx-text-fill: black;" text="Limpiar" />
                                        <!-- Opcional: Eliminar cita seleccionada -->
                                        <Button fx:id="buttonEliminar" onAction="#onEliminarCita" style="-fx-background-color: #f44336; -fx-text-fill: white;" text="Eliminar" />
                                    </children>
                                </HBox>
                            </children>
                        </VBox>

                        <!-- Lado derecho: tabla -->
                        <VBox spacing="10">
                            <children>
                                <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Lista de Citas" />
                                <TableView fx:id="tblCitas" prefHeight="460" prefWidth="800.0">
                                    <columns>
                                        <TableColumn fx:id="ColdIdentificacion" prefWidth="120.0" text="ID" />
                                        <TableColumn fx:id="ColdPropietarios" prefWidth="140.0" text="Propietario" />
                                        <TableColumn fx:id="ColdMascota" prefWidth="140.0" text="Mascota" />
                                        <TableColumn fx:id="ColdVeterinario" prefWidth="140.0" text="Veterinario" />
                                        <TableColumn fx:id="ColdPersonalApoyo" prefWidth="140.0" text="Personal Apoyo" />
                                        <TableColumn fx:id="ColdFecha" prefWidth="160.0" text="Fecha" />
                                        <TableColumn fx:id="ColdObservaciones" prefWidth="220.0" text="Observaciones" />
                                    </columns>
                                </TableView>
                            </children>
                        </VBox>

                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
