<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="700.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="co.edu.uniquindio.poo.veterinaria.viewController.VeterinarioViewController">

    <children>
        <Pane prefHeight="700.0" prefWidth="1200.0" style="-fx-background-color: #F5FBFF;">
            <children>
                <!-- Título principal -->
                <Text fill="#2C5F2D" layoutX="400.0" layoutY="50.0" text="🐾 Registro de Veterinarios" style="-fx-font-weight: bold;">
                    <font>
                        <Font size="30.0"/>
                    </font>
                </Text>

                <!-- Contenedor principal -->
                <HBox layoutX="80.0" layoutY="80.0" spacing="30">
                    <children>
                        <!-- Panel del formulario -->
                        <VBox spacing="15" style="-fx-background-color: #FFFFFF; -fx-padding: 20; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, #999999, 10, 0, 4, 4);">
                            <children>
                                <Text text="Datos del Veterinario" fill="#2C5F2D">
                                    <font>
                                        <Font size="20.0"/>
                                    </font>
                                </Text>

                                <TextField fx:id="txtNombre" promptText="Nombre completo" style="-fx-background-radius: 10;"/>
                                <TextField fx:id="txtid" promptText="Identificación" style="-fx-background-radius: 10;"/>
                                <TextField fx:id="txtDireccion" promptText="Dirección" style="-fx-background-radius: 10;"/>
                                <TextField fx:id="txtTelefono" promptText="Teléfono" style="-fx-background-radius: 10;"/>
                                <TextField fx:id="txtNumeroLicencia" promptText="Número de licencia" style="-fx-background-radius: 10;"/>
                                <TextField fx:id="txtGmail" promptText="Correo electrónico" style="-fx-background-radius: 10;"/>

                                <ComboBox fx:id="CombEspecialidad" prefWidth="200.0" promptText="Especialidad" style="-fx-background-radius: 10;"/>

                                <Button fx:id="buttonAgregar" text="➕ Agregar Veterinario" mnemonicParsing="false"
                                        onAction="#agregarVeterinario"
                                        style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10; -fx-padding: 10;">
                                </Button>
                            </children>
                        </VBox>

                        <!-- Tabla de veterinarios -->
                        <TableView fx:id="tblListVeterinario" prefHeight="500.0" prefWidth="800.0" style="-fx-background-radius: 10; -fx-border-color: #CCCCCC; -fx-border-radius: 10;">
                            <columns>
                                <TableColumn fx:id="TabNombre" prefWidth="120.0" text="Nombre"/>
                                <TableColumn fx:id="TabIdentificacion" prefWidth="120.0" text="Identificación"/>
                                <TableColumn fx:id="TabDireccion" prefWidth="150.0" text="Dirección"/>
                                <TableColumn fx:id="TabTelefono" prefWidth="120.0" text="Teléfono"/>
                                <TableColumn fx:id="TabLicencia" prefWidth="120.0" text="Licencia"/>
                                <TableColumn fx:id="TabGmail" prefWidth="150.0" text="Gmail"/>
                                <TableColumn fx:id="TabEspecialidad" prefWidth="150.0" text="Especialidad"/>
                            </columns>
                        </TableView>
                    </children>
                </HBox>
            </children>
        </Pane>
    </children>
</AnchorPane>
