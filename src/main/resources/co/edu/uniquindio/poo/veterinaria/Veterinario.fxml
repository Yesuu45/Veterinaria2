<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<ScrollPane xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="co.edu.uniquindio.poo.veterinaria.viewController.VeterinarioViewController"
            fitToWidth="true" fitToHeight="true"
            hbarPolicy="AS_NEEDED" vbarPolicy="AS_NEEDED"
            pannable="true"
            prefWidth="1000.0" prefHeight="650.0">

    <content>
        <BorderPane style="-fx-background-color:#F5FBFF;">

            <!-- Título -->
            <top>
                <HBox alignment="CENTER" style="-fx-padding: 20 20 0 20;">
                    <children>
                        <Text text="🐾 Registro de Veterinarios" fill="#2C5F2D" style="-fx-font-weight:bold;">
                            <font><Font size="26.0"/></font>
                        </Text>
                    </children>
                </HBox>
            </top>

            <!-- Cuerpo -->
            <center>
                <HBox spacing="20" style="-fx-padding: 20;">
                    <children>

                        <!-- Formulario -->
                        <VBox spacing="12" prefWidth="320"
                              style="-fx-background-color:#FFFFFF; -fx-padding:20; -fx-background-radius:15; -fx-effect:dropshadow(gaussian,#999,10,0,4,4);">
                            <children>
                                <Text text="Datos del Veterinario" fill="#2C5F2D">
                                    <font><Font size="18.0"/></font>
                                </Text>

                                <TextField fx:id="txtNombre"         promptText="Nombre completo"/>
                                <TextField fx:id="txtid"             promptText="Identificación"/>
                                <TextField fx:id="txtDireccion"      promptText="Dirección"/>
                                <TextField fx:id="txtTelefono"       promptText="Teléfono"/>
                                <TextField fx:id="txtNumeroLicencia" promptText="Número de licencia"/>
                                <TextField fx:id="txtGmail"          promptText="Correo electrónico"/>
                                <ComboBox  fx:id="CombEspecialidad"  promptText="Especialidad"/>

                                <HBox spacing="8">
                                    <Button text="➕ Agregar"    onAction="#agregarVeterinario"
                                            style="-fx-background-color:#4CAF50; -fx-text-fill:white; -fx-font-weight:bold; -fx-background-radius:10; -fx-padding:8;"/>
                                    <Button text="✏ Actualizar" onAction="#onActualizarVeterinario"
                                            style="-fx-background-color:#2196F3; -fx-text-fill:white; -fx-font-weight:bold; -fx-background-radius:10; -fx-padding:8;"/>
                                    <Button text="🗑 Eliminar"   onAction="#onEliminarVeterinario"
                                            style="-fx-background-color:#f44336; -fx-text-fill:white; -fx-font-weight:bold; -fx-background-radius:10; -fx-padding:8;"/>
                                </HBox>
                            </children>
                        </VBox>

                        <!-- Tabla -->
                        <TableView fx:id="tblListVeterinario"
                                   HBox.hgrow="ALWAYS"
                                   VBox.vgrow="ALWAYS"
                                   style="-fx-background-radius:10; -fx-border-color:#CCC; -fx-border-radius:10;">
                            <columns>
                                <TableColumn fx:id="TabNombre"        text="Nombre"        prefWidth="150.0" />
                                <TableColumn fx:id="TabIdentificacion" text="Identificación" prefWidth="120.0"/>
                                <TableColumn fx:id="TabDireccion"      text="Dirección"      prefWidth="150.0"/>
                                <TableColumn fx:id="TabTelefono"       text="Teléfono"       prefWidth="100.0"/>
                                <TableColumn fx:id="TabLicencia"       text="Licencia"       prefWidth="100.0"/>
                                <TableColumn fx:id="TabGmail"          text="Correo"         prefWidth="180.0"/>
                                <TableColumn fx:id="TabEspecialidad"   text="Especialidad"   prefWidth="140.0"/>
                            </columns>
                        </TableView>

                    </children>
                </HBox>
            </center>
        </BorderPane>
    </content>
</ScrollPane>
